@model IEnumerable<Leave_management.Models.LeaveTypeViewModel>

@{
    ViewData["Title"] = "Leave Type";
}

<h1>Leave Types</h1>
<hr/>

<p>
    <a asp-controller="LeaveTypes" class="btn btn-primary" asp-action="Create"><i class="fa fa-plus" aria-hidden="true"></i> Create New</a>
</p>
<table id="tableData" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DefaultDays)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DefaultDays)
            </td>
            <td>
                <a asp-action="Edit" style="color:black" class="p-2" asp-route-id="@item.Id">
                 <i class="fa fa-pencil-alt" aria-hidden="true"></i>
                </a>  
                <a asp-action="Details" style="color:black" class="p-2" asp-route-id="@item.Id">
                 <i class="fa fa-info-circle" aria-hidden="true"></i>
                </a>   
                <a asp-action="Delete" style="color:black" class="p-2" asp-route-id="@item.Id">
                 <i class="fa fa-trash" aria-hidden="true"></i>
                </a>    
            </td>
        </tr>
}
    </tbody>
</table>

